@model MaKore.Models.Rating

@{
    ViewData["Title"] = "Details";
}

<div id="container">
    <div class="head">
        <span class="first">Details</span>
        <div class="ratepanel">
            <a class="create" asp-action="Index">Back to Rating page</a>
            <a  asp-action="Edit" asp-route-id="@Model?.ID">Edit Feadback</a>
            <a class="return" href='http://localhost:3000/chats'>Return to Chat</a>
        </div>
    </div>
    <div class="box-container">
        <div class="col-md-6">
            <hr>
            <dl class="row">
                <dt class="col-sm-2" style="padding-bottom:10px;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10" style="padding-bottom:10px;">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2" style="padding-bottom:10px;">
                    @Html.DisplayNameFor(model => model.Grade)
                </dt>
                <dd class="col-sm-10" style="padding-bottom:10px;">
                    @Html.DisplayFor(model => model.Grade)
                </dd>
                <dt class="col-sm-2" style="padding-bottom:10px;">
                    @Html.DisplayNameFor(model => model.Feedback)
                </dt>
                <dd class="col-sm-10" style="padding-bottom:10px;">
                    @Html.DisplayFor(model => model.Feedback)
                </dd>
                <dt class="col-sm-2" style="padding-bottom:10px;">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10" style="padding-bottom:10px;">
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </dl>

        </div>
    </div>
</div>
